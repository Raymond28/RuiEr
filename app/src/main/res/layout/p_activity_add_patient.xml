<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical"
    tools:context=".patient.activity.AddPatientActivity">

    <include layout="@layout/base_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--内容下移35.5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_margin_20"
                android:layout_marginRight="@dimen/base_margin_20"
                android:layout_marginTop="67.5dp"
                android:background="@drawable/base_bg_normal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52.5dp"
                    android:text="黄埔于海"
                    android:textColor="@color/colorTextDarkGray"
                    android:textSize="@dimen/irc_text_l" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fixed_height_bottom_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主任医师"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/irc_text_m" />

                    <TextView
                        android:id="@+id/tv_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/divider_padding_left"
                        android:text="北京阜外医院"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/irc_text_m" />
                </LinearLayout>

                <!--间隔符-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/divider_h_30"
                    android:layout_marginRight="@dimen/divider_h_30"
                    android:layout_marginTop="20dp"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="………………………………………………………………………………………………………………………………" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="瑞尔号："
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/irc_text_m" />

                    <TextView
                        android:id="@+id/tv_irc_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="10000008"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/irc_text_m" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者用微信扫一扫添加我"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/irc_text_m" />

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="180dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/p_btn_orange_22"
                    android:text="点击分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/irc_text_m" />

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@mipmap/doctor_default_head"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/dividerColor"/>
        </FrameLayout>


    </ScrollView>
</LinearLayout>