<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp">
        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/patient_select_n"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar_p_l"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_name_p_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="张丽娟"
            style="@style/style_14_666"
            android:layout_marginLeft="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="19dp"
            >
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="一直咳嗽"
                android:maxLines="1"
                android:maxLength="6"
                android:ellipsize="end"
                style="@style/style_12_999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_note"
                style="@style/style_12_999"
                android:text="备注："/>

            <TextView
                android:id="@+id/tv_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                style="@style/style_12_999"
                tools:text="2018-10-01"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/tv_startTime"
                style="@style/style_12_999"
                android:text="添加于"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>