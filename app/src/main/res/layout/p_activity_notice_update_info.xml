<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/base_tool_bar" />

    <TextView
        style="@style/style_16_666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="未完善信息的患者将收到一下提醒" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingTop="20dp">

            <TextView
                style="@style/style_16_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生提醒" />

            <TextView
                style="@style/style_14_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="9月8日" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_content"
            style="@style/style_14_666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notice_txt"
            android:lineSpacingExtra="8dp"
            />

        <TextView
            style="@style/style_14_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="立即完善信息》" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_notice"
        style="@style/style_16_fff"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/p_btn_orange_22"
        android:text="一键提醒" />


</LinearLayout>