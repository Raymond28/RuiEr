<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--标题栏-->
        <!--<item name="colorPrimary">@android:color/holo_blue_bright</item>-->
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>


    <!--首页底部Tab-->
    <style name="main_tab_btn">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--字体style 14sp #999-->
    <style name="style_14_999">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999</item>
    </style>
    <!--字体style 14sp #666-->
    <style name="style_14_666">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
    </style>
    <!--字体style 14sp orange-->
    <style name="style_14_orange">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/base_color</item>
    </style>
    <!--字体style 12sp #999-->
    <style name="style_12_999">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999</item>
    </style>
    <!--字体style 16sp #fff 长按钮字体-->
    <style name="style_16_fff">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <!--字体style 16sp #666 标题-->
    <style name="style_16_666">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666</item>
    </style>

    <!--toolbar弹出菜单的风格-->
    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/titleBarColor</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
